<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@drawable/facial">


    <ImageView
        android:id="@+id/face1"
        android:layout_width="106dp"
        android:layout_height="109dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/face2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.888" />

    <ImageView
        android:id="@+id/face2"
        android:layout_width="106dp"
        android:layout_height="109dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="275dp"
        app:layout_constraintRight_toLeftOf="@+id/face3"
        android:layout_marginRight="12dp" />

    <ImageView
        android:id="@+id/face3"
        android:layout_width="106dp"
        android:layout_height="109dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="275dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/face4"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/face2"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintRight_toLeftOf="@+id/face5"
        android:layout_marginRight="12dp" />

    <ImageView
        android:id="@+id/face5"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/face3"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/face6"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/face1"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/face4"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>